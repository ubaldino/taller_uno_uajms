footer.footer.footer-static.navbar-fixed-bottom.footer-light.navbar-border
  .row
    .col-md-5
      ul.nav.navbar-nav.float-xs-left
        li.dropdown.dropdown-user.nav-item
          if auth&&auth.isAuthenticated()
            a.nav-link.dropdown-user-link(href="#",data-toggle="dropdown")
              span.avatar.avatar-online
                if auth.getPrincipal().getProfile().getFoto()
                    img(src="/public/uploads/#{auth.getPrincipal().getProfile().getFoto()}", alt="avatar")
                else
                    img(src="/public/uploads/user_default.png", alt="avatar")
              span 
                span.user-name #{auth.getName()}
          else
            span.user-name Anonimo
    .col-md-4
      span.float-md-center Copyleft Â© 2017
    .col-md-3
      .row
        .col-md-6
          span.float-md-center #{date}
        .col-md-6
          span.float-md-right
            if auth&&auth.isAuthenticated()
              a.btn.btn-secondary.btn-block(href="/logout") Desconectar
            else
              a.btn.btn-secondary.btn-block(href="/login") Conectarse
