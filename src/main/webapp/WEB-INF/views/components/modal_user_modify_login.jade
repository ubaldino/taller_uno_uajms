.modal.fade.text-xs-left(id="login_modify_#{profile.codp}",tabindex="-1", role="dialog", aria-labelledby="myModalLabel33", aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") Ã—
        label#myModalLabel33.modal-title.text-text-bold-600  Modificar datos de acceso
      form.form(action="/users/login/#{profile.codp}/modify", method="post")
        .form-body
          .row(align="center")
            .col-md-12
              .form-group
                table
                  tr
                    td
                      label.form-label(for="login") Nombre del Usuario
                    td
                      input#login.form-control.form-control-lg.input-lg(name="login",value="#{profile.getUser().login}",required)
                  tr
                    td
                      label.form-label(for="password") Password
                    td
                      input#password.form-control.form-control-lg.input-lg(type="password",name="password", placeholder="Password",required)
                  tr
                    td
                      label.form-label(for="retype_password") Repetir Password
                    td
                      input#retype_password.form-control.form-control-lg.input-lg(type="password",name="retype_password", placeholder="Password",required)
          .row(align="center")
            .col-md-6
              .form-group
                button.btn.btn-primary.btn-md(type="submit") Guardar
            .col-md-6
              .form-group
                button.btn.btn-outline-secondary.btn-md(type="reset", data-dismiss="modal") Cancelar
