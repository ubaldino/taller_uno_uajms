nav.header-navbar.navbar.navbar-with-menu.navbar-fixed-top.navbar-semi-dark.navbar-shadow
  .navbar-wrapper
    .navbar-header
      ul.nav.navbar-nav
        li.nav-item.mobile-menu.hidden-md-up.float-xs-left
          a.nav-link.nav-menu-main.menu-toggle.hidden-xs
            i.icon-menu5.font-large-1
        |         
        li.nav-item
          a.navbar-brand.nav-link(href="/")
            img.brand-logo(alt="branding logo", src="/public/app-assets/images/logo/logo_csma.png", data-expand="/public/app-assets/images/logo/logo_csma.png", data-collapse="/public/app-assets/images/logo/logo_csma.png", style="width: 40%;")
        |         
        li.nav-item.hidden-md-up.float-xs-right
          a.nav-link.open-navbar-container(data-toggle="collapse", data-target="#navbar-mobile")
            i.icon-ellipsis.pe-2x.icon-icon-rotate-right-right
    |     
    .navbar-container.content
      #navbar-mobile.collapse.navbar-toggleable-sm
        ul.nav.navbar-nav
          //
            <li class="nav-item hidden-sm-down">
            <a class="nav-link nav-menu-main menu-toggle hidden-xs"><i class="icon-menu5"></i></a>
            </li>
          li.nav-item.hidden-sm-down
            a.nav-link.nav-link-expand(href="#")
              i.ficon.icon-expand2
          // MENUES
          if auth && auth.isAuthenticated()
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/dashboard") Dashboard
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/users") Usuarios
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/roles") Roles
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/menus") Menus
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/procesos") Procesos
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/materias") Materias
            li.nav-item.hidden-sm-down
              a.navbar-brand.nav-link(href="/paralelos") Paralelos
        ul.nav.navbar-nav.float-xs-right
          if auth && auth.isAuthenticated()
            li.dropdown.dropdown-language.nav-item
              a#dropdown-flag.dropdown-toggle.nav-link(href="#", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                i.flag-icon
                span.selected-language Usuario
              .dropdown-menu(aria-labelledby="dropdown-flag")
                each role in auth.getAuthorities()
                  a.dropdown-item(href="#")
                    i.flag-icon
                    | #{role.getAuthority()}
