extends ./base
block content
  br
  br
  br
  br
  .content-header.row
    .content-header-left.col-md-6.col-xs-12.mb-1
      h2.content-header-title Usuarios
    .content-header-right.breadcrumbs-right.breadcrumbs-top.col-md-6.col-xs-12
      .breadcrumb-wrapper.col-xs-12
        ol.breadcrumb
          li.breadcrumb-item
            a(href="/") Inicio
          |                 
          li.breadcrumb-item
            a(href="/users") Usuarios
  .content-body
    // Basic form layout section start
    section#basic-form-layouts
      include ./components/modal_user_create.jade
      // Bordered striped start
      .col-md-12
        .row
          .col-md-4(align="center")
            input.form-control(type="text", name="filter", placeholder="Filtro")
          .col-md-3(align="center")
            select.form-control(name="tipo_personal")
              option(value="") Elegir Tipo personal
              option(value="P", checked)  Público
              option(value="A")  Administrativo
          .col-md-4(align="center")
            input(type="radio", name="gender", value="male", style="margin-left: 5%")
            |  activos
            input(type="radio", name="gender", value="female", style="margin-left: 5%")
            |  Bajas
            input(type="radio", name="gender", value="other", checked="", style="margin-left: 5%")
            |   Todos
          .col-md-1(align="center")
            button(type="button", data-toggle="modal", data-target="#user_add")
              img(src="/public/icons/agregar.png", alt="")
      |     
      .col-md-12
        .card
          .card-header
            h4.card-title Usuarios Registrados
            a.heading-elements-toggle
              i.icon-ellipsis.font-medium-3
          .card-body.collapse.in
            .table-responsive
              table.table.table-bordered.table-striped
                thead
                  tr
                    th(style="width:5%") Foto
                    |                                 
                    th(style="width:35%") Apellidos y Nombres
                    |                                 
                    th(style="width:10%") Estado
                    |                                 
                    th(style="width:10%") M
                    |                                 
                    th(style="width:10%") B
                    |                                 
                    th(style="width:10%") H
                    |                                 
                    th(style="width:10%") V
                    |                                 
                    th(style="width:10%") K
                |                         
                tbody
                  each profile in profiles
                    tr
                      // <th scope="row">1</th>
                      td
                        img(src="/public/uploads/#{profile.foto}", alt="", style="max-width: 100%;")
                      td #{profile.ap} #{profile.am} #{profile.nombre}
                      td
                        if profile.estado==0
                          img(src="/public/icons/inactivo.png", alt="")
                        else
                          img(src="/public/icons/activo.png", alt="")
                      td
                        button(type="button", data-toggle="modal", data-target="\#user_modify_#{profile.codp}")
                          img(src="/public/icons/modificar.png", alt="")
                        include ./components/modal_user_modify.jade
                      td
                        button(type="button", data-profile="#{profile.codp}", data-toggle="modal", data-target="\#del_#{profile.codp}")
                          img(src="/public/icons/eliminar.png", alt="")
                        .modal.fade.text-xs-left(id="del_#{profile.codp}", tabindex="-1", role="dialog", aria-labelledby="myModalLabel33", aria-hidden="true")
                          .modal-dialog(role="document")
                            .modal-content
                              .modal-header
                                button.close(type="button", data-dismiss="modal", aria-label="Close")
                                  span(aria-hidden="true") ×
                                label#myModalLabel33.modal-title.text-text-bold-600 Dar de baja Usuario
                              form(action="/users/#{profile.codp}/delete", method="post")
                                .modal-footer.text-center
                                  input.btn.btn-outline-secondary.btn-lg(type="reset", data-dismiss="modal", value="Cancelar")
                                  input.btn.btn-outline-primary.btn-lg(type="submit", value="Dar Baja")
                      td
                        button(type="button", data-profile="#{profile.codp}")
                          img(src="/public/icons/habilitar.png", alt="")
                      td
                        button(type="button", data-profile="#{profile.codp}")
                          img(src="/public/icons/imprimir.png", alt="")
                      td
                        button(type="button", data-profile="#{profile.codp}")
                          if profile.user
                            img(src="/public/icons/with_login.png", alt="")
                          else
                            img(src="/public/icons/no_login.png", alt="")
        br
        br
        br